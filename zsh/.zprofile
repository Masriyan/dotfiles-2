# Misc
export EDITOR=nvim

# Go development
export GOPATH=$HOME/.go
if [ "$OSTYPE" == "darwin"* ]; then
  export GOROOT="$(brew --prefix golang)/libexec"
fi

# Ruby development
export GEM_HOME=$HOME/.gem

# PATH environment variable
PATH=$PATH:/opt/bin:$HOME/.local/bin:$HOME/bin:$GOPATH/bin:$GOROOT/bin:$GEM_HOME/bin:$HOME/.config/composer/vendor/bin:$HOME/.perl5/perlbrew/bin:$HOME/.npm-global/bin:$HOME/.cargo/bin:$HOME/.yarn/bin:$HOME/.cargo/bin:$HOME/scripts:$HOME/opt/android-studio/bin:$HOME/Repos/flutter/bin:$HOME/.pub-cache/bin:/opt/metasploit-framework/bin/

# launchctl for macOS
#launchctl setenv PATH $PATH
#launchctl config user path $PATH
